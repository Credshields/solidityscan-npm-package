{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "allowJs": true
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "bin/**/*.ts",
    "types.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "__tests__"
  ]
}

